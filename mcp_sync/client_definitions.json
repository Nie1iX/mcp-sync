{
  "clients": {
    "claude-desktop": {
      "name": "Claude Desktop",
      "description": "Official Claude Desktop application",
      "paths": {
        "darwin": "~/Library/Application Support/Claude/claude_desktop_config.json",
        "windows": "%APPDATA%/Claude/claude_desktop_config.json",
        "linux": "~/.config/claude/claude_desktop_config.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "claude-code": {
      "name": "Claude Code",
      "description": "Claude CLI for code editing",
      "config_type": "cli",
      "cli_commands": {
        "list_mcp": "claude mcp list",
        "get_mcp": "claude mcp get {name}",
        "add_mcp": "claude mcp add {name} {env_flags} --scope {scope} --transport {transport} {command_args}",
        "remove_mcp": "claude mcp remove --scope {scope} {name}"
      },
      "fallback_paths": {
        "darwin": "~/.claude.json",
        "windows": "%USERPROFILE%/.claude.json",
        "linux": "~/.claude.json"
      }
    },
    "codex": {
      "name": "Codex",
      "description": "OpenAI Codex CLI",
      "paths": {
        "darwin": "~/.codex/config.toml",
        "windows": "%USERPROFILE%/.codex/config.toml",
        "linux": "~/.codex/config.toml"
      },
      "config_format": "toml",
      "mcp_key": "mcp_servers"
    },
    "cline": {
      "name": "Cline",
      "description": "VS Code extension for AI assistance",
      "paths": {
        "darwin": "~/Library/Application Support/Code/User/globalStorage/cline_mcp_settings.json",
        "windows": "%APPDATA%/Code/User/globalStorage/cline_mcp_settings.json",
        "linux": "~/.config/Code/User/globalStorage/cline_mcp_settings.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "roo": {
      "name": "Roo",
      "description": "Roo VS Code extension for AI assistance",
      "paths": {
        "darwin": "~/Library/Application Support/Code/User/globalStorage/rooveterinaryinc.roo-cline/settings/mcp_settings.json",
        "windows": "%APPDATA%/Code/User/globalStorage/rooveterinaryinc.roo-cline/settings/mcp_settings.json",
        "linux": "~/.config/Code/User/globalStorage/rooveterinaryinc.roo-cline/settings/mcp_settings.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "vscode-user": {
      "name": "Visual Studio Code",
      "description": "VS Code MCP settings",
      "paths": {
        "darwin": "~/.vscode/mcp.json",
        "windows": "%APPDATA%/Roaming/Code/User/mcp.json",
        "linux": "~/.vscode/mcp.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "cursor": {
      "name": "Cursor",
      "description": "Cursor AI code editor",
      "paths": {
        "darwin": "~/.cursor/mcp.json",
        "windows": "%APPDATA%/Cursor/mcp.json",
        "linux": "~/.cursor/mcp.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "gemini-cli": {
      "name": "Gemini CLI",
      "description": "Google Gemini CLI (gcloud) MCP settings",
      "paths": {
        "darwin": "~/.gemini/settings.json",
        "windows": "%APPDATA%/.gemini/settings.json",
        "linux": "~/.gemini/settings.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "copilot-cli": {
      "name": "GitHub Copilot CLI",
      "description": "GitHub Copilot CLI MCP settings",
      "paths": {
        "darwin": "~/.copilot/mcp-config.json",
        "windows": "%USERPROFILE%/.copilot/mcp-config.json",
        "linux": "~/.copilot/mcp-config.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "kilocode": {
      "name": "Kilo Code",
      "description": "Kilo Code VS Code extension MCP settings",
      "paths": {
        "darwin": "~/Library/Application Support/Code/User/globalStorage/kilocode.kilo-code/settings/mcp_settings.json",
        "windows": "%APPDATA%/Code/User/globalStorage/kilocode.kilo-code/settings/mcp_settings.json",
        "linux": "~/.config/Code/User/globalStorage/kilocode.kilo-code/settings/mcp_settings.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "kilocode-cli": {
      "name": "Kilo Code CLI",
      "description": "Kilo Code CLI MCP settings",
      "paths": {
        "darwin": "~/.kilocode/cli/global/settings/mcp_settings.json",
        "windows": "%USERPROFILE%/.kilocode/cli/global/settings/mcp_settings.json",
        "linux": "~/.kilocode/cli/global/settings/mcp_settings.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    },
    "continue": {
      "name": "Continue",
      "description": "Continue VS Code extension",
      "paths": {
        "darwin": "~/.continue/config.json",
        "windows": "~/.continue/config.json",
        "linux": "~/.continue/config.json"
      },
      "config_format": "json",
      "mcp_key": "mcpServers"
    }
  }
